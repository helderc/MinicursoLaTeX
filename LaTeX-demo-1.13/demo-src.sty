\ifpdf
%%% versão PDF
\RequirePackage[pdftex]{hyperref}

\hypersetup{colorlinks,
  linkcolor=blue,  %%% cor do tableofcontents, \ref, \footnote, etc
  citecolor=blue,  %%% cor do \cite
