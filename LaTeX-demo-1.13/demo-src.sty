%%% define a macro \ifpdf para compilação condicional.  Desse modo é
%%% possível definir blocos que só são processados na versão PDF.
\newif\ifpdf
  \ifx\pdfoutput\undefined
  \pdffalse
\else
  \pdfoutput=1
  \pdftrue
\fi

\RequirePackage[latin1]{inputenc}
\RequirePackage[brazil]{babel}

\ifpdf
\RequirePackage[pdftex]{geometry}
\RequirePackage{ae}
\else
\RequirePackage[T1]{fontenc}
\RequirePackage[dvips]{geometry}
\fi

