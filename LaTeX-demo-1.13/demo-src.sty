  pdfauthor={Klaus Steding-Jessen <jessen@acm.org>},
  pdfsubject={Todos os arquivos usados no LaTeX-demo},
  pdfkeywords={\docpdfkeywords}}
\fi

%%% macro para typesetting de palavras em Inglês.
\newcommand{\eng}[1]{\textit{#1}}

%%% BiBTeX Logo
\newcommand{\BibTeX}{{\rm B\kern-.05em{\sc i\kern-.025em b}\kern-.08em\TeX}}

%%% GNUPLOT Logo
\newcommand{\gnuplot}{\textsf{gnuplot}}

%%% xfig Logo
\newcommand{\xfig}{\textsf{xfig}}

\newcommand{\email}{\begingroup \urlstyle{tt}\Url}

%%% aumenta o tamanho da fonte usada no número de linhas
\renewcommand{\theFancyVerbLine}{%
{\footnotesize{\arabic{FancyVerbLine}}}}

\newcommand{\insertfile}[1]{%
\subsection{#1}
\VerbatimInput[frame=lines,numbers=left]{#1}%
\clearpage}

\newcommand{\insertfilewithtabs}[1]{%
\subsection{#1}%
\VerbatimInput[obeytabs=true,frame=lines,numbers=left]{#1}%
\clearpage}


